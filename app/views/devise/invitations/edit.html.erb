<section class="h-custom">
  <div class="container-fluid">
    <div class="d-flex justify-content-center">
      <div class="col-sm-4">
        <br>

        <div class="card">
          <div class="card-body p-4 p-md-5">
            <div class="d-flex justify-content-center">
              <h2>Set your password</h2>
            </div>
            <br>
            <%#byebug%>
            <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
              <%#= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :invitation_token, readonly: true %>

              <% if f.object.class.require_password_on_accepting %>

                <div class="mb-3">
                  <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "new-password" %>
                </div>

                <div class="mb-3">
                  <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control", autocomplete: "new-password" %>
                </div>
              <% end %>
              <br>

              <div class="actions d-flex justify-content-center">
                <%= f.submit 'Set my password', class: 'btn btn-secondary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
