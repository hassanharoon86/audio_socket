<div class="container">
  <br>

  <div class="col-md-4">
    <%= form_with(url: managers_path, method: :get, local: false) do |f| %>
      <%= f.text_field :query, class: 'search-bar', placeholder: 'Search by Name, Artist, Email or Genres' %>
      <%= f.submit "Search", class: 'btn btn-secondary' %>
    <% end %>
  </div>
  <br>

  <div class="form-control">
    <%= link_to 'All', root_path %>(<%= @auditions.count %>)
    <%= link_to 'Pending', root_path %>(<%= @auditions.where(status: 0).count %>)
    <%= link_to 'Approved', root_path %>(<%= @auditions.where(status: 1).count %>)
    <%= link_to 'Rejected', root_path %>(<%= @auditions.where(status: 2).count %>)
    <%= link_to 'Deleted', root_path %>(<%= @auditions.where(status: 3).count %>)
  </div>
  <br>

  <table id="auditions" class="table table-bordered table-striped table-hover table-color">
    <%= render partial: 'audition_table' %>
  </table>


<br>
